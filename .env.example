# Application Settings
APP_NAME=Prime VPN
APP_VERSION=1.0.2
DEBUG=False
API_VERSION=v1

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=30

# Database
DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/primevpn

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://localhost:6379

# CORS Settings
ALLOWED_ORIGINS=["http://localhost:3000","https://yourdomain.com"]

# Rate Limiting & DDoS Protection
RATE_LIMIT_ENABLED=true
RATE_LIMIT_STORAGE=redis
GLOBAL_RATE_LIMIT=1000
IP_RATE_LIMIT=100

# DDoS Protection Settings
DDOS_PROTECTION_ENABLED=true
DDOS_THRESHOLD=500
DDOS_BAN_DURATION=3600
DDOS_WHITELIST_IPS=["127.0.0.1","::1","10.0.0.0/8"]

# Suspicious Activity Detection
SUSPICIOUS_ACTIVITY_THRESHOLD=50
SUSPICIOUS_ACTIVITY_WINDOW=300
SUSPICIOUS_ACTIVITY_BAN=1800

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM_NAME=Prime VPN
EMAIL_FROM_ADDRESS=noreply@primevpn.com
EMAIL_VERIFICATION_TOKEN_EXPIRES=86400

# Frontend
FRONTEND_URL=http://localhost:3000

# Session
SESSION_EXPIRES_IN=2592000

# Stripe (if using payments)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/primevpn.log